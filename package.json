{
  "name": "react-baseline",
  "version": "1.0.0",
  "description": "Starter app for React and Redux client-side",
  "private": true,
  "author": "Matt Morgan",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "node packages/react-scripts/scripts/build.js",
    "changelog": "lerna-changelog",
    "create-react-app": "tasks/cra.sh",
    "e2e": "tasks/e2e-simple.sh",
    "e2e:docker": "tasks/local-test.sh",
    "lint": "./node_modules/.bin/eslint -c .eslintrc.js --fix --ext js --ext jsx src; exit 0",
    "postinstall": "node bootstrap.js && cd packages/react-error-overlay/ && npm run build:prod",
    "publish": "tasks/release.sh",
    "start": "node packages/react-scripts/scripts/start.js",
    "test": "node packages/react-scripts/scripts/test.js --env=jsdom",
    "format": "prettier --trailing-comma es5 --single-quote --write 'packages/*/*.js' 'packages/*/!(node_modules)/**/*.js'",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "eslint": "^4.4.1",
    "husky": "^0.13.2",
    "lerna": "^2.0.0",
    "lerna-changelog": "^0.6.0",
    "lint-staged": "^3.3.1",
    "prettier": "^1.5.2",
    "colors": "1.1.2",
    "npm-run-all": "3.1.2",
    "react-addons-test-utils": "^15.4.1",
    "react-scripts": "^0.8.4",
    "react-test-renderer": "^15.4.1",
    "redux-mock-store": "1.2.1",
    "rimraf": "2.5.4"
  },
  "eslintConfig": ".eslintrc.js",
  "lint-staged": {
    "*.js": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ],
    "dependencies": {
      "babel-polyfill": "6.16.0",
      "bootstrap": "3.3.7",
      "jquery": "^3.1.1",
      "react": "^15.4.1",
      "react-dom": "^15.4.1",
      "react-redux": "4.4.6",
      "react-router": "3.0.0",
      "react-router-redux": "4.0.7",
      "react-widgets": "^3.4.5",
      "redux": "3.6.0",
      "redux-immutable-state-invariant": "^1.2.4",
      "redux-thunk": "2.1.0",
      "toastr": "2.1.2"
    },
    "repository": {
      "type": "git",
      "url": "git@github.com:matthewmorgan/react-baseline.git"
    }
  }
